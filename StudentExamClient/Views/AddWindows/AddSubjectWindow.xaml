<Window x:Class="StudentExamClient.Views.AddWindows.AddSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Новый предмет" Height="200" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">

            <TextBlock Text="Название:"/>
            <TextBox Text="{Binding NewSubject.Name, UpdateSourceTrigger=PropertyChanged}" Height="24" Padding="3"/>
            <Button Command="{Binding AddSubject}" Content="Добавить" Margin="0 16 0 16" Padding="3"/>

        </StackPanel>
    </Grid>
</Window>
