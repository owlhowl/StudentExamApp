<Window x:Class="StudentExamClient.Views.AddWindows.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Новый пароль" Height="250" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            
            <TextBlock Text="У вас не установлен пароль!" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 16"/>
            
            <TextBlock Text="Новый пароль:"/>
            <PasswordBox x:Name="password1" Margin="0 0 0 8" Padding="3"/>
            
            <TextBlock Text="Подтвердите пароль:"/>
            <PasswordBox x:Name="password2" Padding="3"/>

            <Grid Margin="0 16 0 8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="setPassword" Grid.Column="0" Content="Сменить пароль" Padding="3" Margin="0 0 4 0"/>
                <Button x:Name="setLater" Grid.Column="1" Content="Позже" Padding="3" Margin="4 0 0 0"/>

            </Grid>
        </StackPanel>
    </Grid>
</Window>
