<Window x:Class="StudentExamClient.Views.EditWindows.EditPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentExamClient.Views.EditWindows"
        mc:Ignorable="d"
        Title="Сменить пароль" Height="250" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <TextBlock Text="Новый пароль:"/>
            <PasswordBox x:Name="password1" Margin="0 0 0 8" Padding="3"/>

            <TextBlock Text="Подтвердите пароль:"/>
            <PasswordBox x:Name="password2" Padding="3"/>

            <Button x:Name="setPassword" Grid.Column="0" Content="Сменить пароль" Padding="3" Margin="0 16 0 8"/>
        </StackPanel>
    </Grid>
</Window>
